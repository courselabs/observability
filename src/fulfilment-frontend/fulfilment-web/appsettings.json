{
  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "Microsoft": "Warning",
      "Microsoft.Hosting.Lifetime": "Information"
    }
  },
  "AllowedHosts": "*",
  "Serilog": {
    "MinimumLevel": "Debug",
    "Enrich": [ "WithMachineName" ]
  },
  "Observability": {
    "Logging": {
      "FilePath" : "logs/fulfilment-web.json"
    },
    "Trace": {
      "Jaeger": false,
      "Console": true,
      "Agent": {
        "Host": "jaeger",
        "Port": 6831
      },
      "CustomSpans": true,
      "Baggage": {
        "Tag": true,
        "Log": true
      }
    }
  },
  "Documents": {
    "Api": {
      "BaseUrl": "http://localhost:8071"
    },
    "Authz": {
      "Url": "http://localhost:41791/check"
    }
  }
}
